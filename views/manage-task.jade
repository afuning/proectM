extends layout
block append head
  link(rel='stylesheet', href='/src/plugin/pageination.css')
  link(rel='stylesheet', href='/src/plugin/timepicker/css/jquery-ui.css')
  link(rel='stylesheet', href='/css/manage.css')
block content
  #container.clearfix
    include leftside
    .col-main
      div.main_hd
        h2 任务管理
        div.tab_inner
          ul.tab_list
            li.tab_item.active(data-index = '0')
              a(href='javascript:void(0);') 任务列表
            li.tab_item(data-index = '1')
              a(href='javascript:void(0);') 新增任务
      div(style='padding-top: 10px')
      div.main_bd(data-index = '0')
        div.clearfix(id="screen")
          div.screen_group
            div.screen_inner
              label 项目:
              select(id='screen_project')
                option(value='') 全部
                each item in project
                  option(value= item._id)= item.name
            span.line |
            div.screen_inner
              label 任务状态:
              select(id='screen_status')
                option(value= '') 全部状态
                option(value= 1) 已完成
                option(value= 0) 待完成
                option(value= 2) 已结束
            span.line |
            div.screen_inner
              input(type="text" id="project_name" placeholder='请输入任务名称')
            div.br
            div.screen_inner
              a.sort.btn-line.active(sort-type= '0') 默认排序
              a.sort.btn-line(sort-type= '1') 按要求时间排序
            span.line |
            div.screen_inner
              a.isown.btn-line 只看自己
            div.br
            div.screen_action
              button(class="btn-success screen_submit" style='margin: 3px 0') 筛选
        div.common_table
          table
            tr.table_hd
              th
                span 任务名称
              th
                span 所属项目
              th
                span 创建者
              th
                span 执行者
              th
                span 修改(创建)日期
              th
                span 要求完成时间
              th
                span 结束时间
              th
                span 操作
        div.page_container.clearfix
          div#page
      div.main_bd(style= 'display: none' data-index = '1')
        div.input_group(style= 'text-align: left; margin-top: 50px; ')
          div.input_inner
            label 任务名称:
            input(type="text" id='name_input' placeholder='请输入任务名称')
          br
          div.input_inner
            label 所属项目:
            select(style= 'width: 332px' id='project_input')
              each item in project
                option(value= item._id)= item.name
          br
          div.input_inner
            label 被指派者:
            select(style= 'width: 332px' id='to_input')
              each item in user
                option(value= item._id)= item.realname
          br
          div.input_inner
            label 完成期限:
            input(type="text" id='time_input' placeholder='请选择时间')
          br
          div.input_inner
            label 详情:
            textarea(placeholder='请输入该任务的详情' id='detail_input')
          div.btn_inner(style= 'margin: 0; text-align: center;')
            a.btn-line(id= 'clear' style= 'margin-right: 20px') 重置
            a.btn-success(id= 'submit') 提交

append script
  script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js')
  script(src="/src/plugin/timepicker/js/jquery-ui.js")
  script(src="/src/plugin/timepicker/js/jquery-ui-slide.min.js")
  script(src="/src/plugin/timepicker/js/jquery-ui-timepicker-addon.js")
  script(src='/src/plugin/lib-pagination.js')
  script(src='/src/plugin/moment.js')
  script(src='/src/manage-task.js')
