extends layout
block append head
  link(rel='stylesheet', href='/src/plugin/pageination.css')
  link(rel='stylesheet', href='/css/file.css')
block content
  #container.clearfix
    include leftside
    .col-main
      div.main_hd
        h2 文件列表
        div.tab_inner
          ul.tab_list
            li.tab_item.active
              a(href='javascript:void(0);') 文件列表
      div(style='padding-top: 10px')
      div.main_bd
        div.clearfix(id="screen")
          div.screen_group
            div.screen_inner
              input(type="text" id="title" placeholder='请输入标题')
            div.screen_action
              button(class="btn-success screen_submit") 筛选
        div.common_table
          table
            tr.table_hd
              th
                span 标题
              th
                span 创建人
              th
                span 文件列表
              //
                th
                  span 操作
        div.page_container.clearfix
          div#page

append script
  script(src='/src/plugin/lib-pagination.js')
  script(src='/src/file-list.js')
